<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Ticket Sales Page Template -->
        <template id="agency_ticket_sales" name="Agency Ticket Sales">
            <t t-call="eth_agency_portal.agency_base_template">
                <t t-set="head">
                    <style>
                        .ticket-type-tabs {
                            border-bottom: 2px solid #dee2e6;
                            margin-bottom: 20px;
                        }
                        .ticket-type-tabs .nav-link {
                            border: none;
                            color: #6c757d;
                            padding: 12px 24px;
                            font-weight: 500;
                        }
                        .ticket-type-tabs .nav-link.active {
                            color: #667eea;
                            border-bottom: 2px solid #667eea;
                            margin-bottom: -2px;
                        }
                        .product-card {
                            border: 1px solid #dee2e6;
                            border-radius: 10px;
                            margin-bottom: 15px;
                            transition: all 0.2s;
                        }
                        .product-card:hover {
                            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
                        }
                        .product-card .card-body {
                            padding: 15px;
                        }
                        .product-image {
                            width: 60px;
                            height: 60px;
                            border-radius: 8px;
                            background-color: #f8f9fa;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                        }
                        .quantity-input {
                            width: 80px;
                            text-align: center;
                        }
                        .stock-badge {
                            font-size: 0.75rem;
                            padding: 4px 8px;
                        }
                        .cart-summary {
                            position: sticky;
                            top: 20px;
                        }
                        .cart-item {
                            padding: 10px 0;
                            border-bottom: 1px solid #e9ecef;
                        }
                        .cart-item:last-child {
                            border-bottom: none;
                        }
                        .visitor-inline-container {
                            background-color: #f8f9fa;
                            border-radius: 0 8px 8px 0;
                            padding: 8px 12px;
                        }
                        .visitor-inline-item {
                            min-height: 36px;
                        }
                        .visitor-inline-item .btn-sm {
                            padding: 2px 8px;
                            font-size: 0.75rem;
                        }
                    </style>
                </t>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h2>
                                    <i class="fas fa-ticket-alt me-2"></i>
                                    Ticket Sales
                                </h2>
                            </div>

                            <div class="row">
                                <!-- Products Section -->
                                <div class="col-lg-8">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <!-- Date Selection - Top Row -->
                                            <div class="row mb-3">
                                                <div class="col-md-4">
                                                    <label class="form-label mb-1">Visit Date</label>
                                                    <input type="date" class="form-control" id="visit_date" onchange="onVisitDateChange()"/>
                                                </div>
                                            </div>
                                            <!-- Ticket Type Tabs - Full Width Row -->
                                            <div class="row">
                                                <div class="col-12">
                                                    <ul class="nav ticket-type-tabs mb-0" id="ticketTypeTabs">
                                                        <!-- Tabs will be populated by JavaScript -->
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <!-- Loading -->
                                            <div id="productsLoading" class="text-center py-4">
                                                <div class="spinner-border text-primary" role="status">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                                <p class="mt-2 text-muted">Loading products...</p>
                                            </div>

                                            <!-- Products List -->
                                            <div id="productsList" style="display: none;">
                                            </div>

                                            <!-- No Products -->
                                            <div id="noProducts" class="text-center py-4" style="display: none;">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <p class="text-muted">No products available for selected date and type.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Cart Section -->
                                <div class="col-lg-4">
                                    <div class="card cart-summary">
                                        <div class="card-header bg-primary text-white">
                                            <h5 class="mb-0">
                                                <i class="fas fa-shopping-cart me-2"></i>
                                                Cart
                                                <span class="badge bg-light text-primary ms-2" id="cartItemCount">0</span>
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <!-- Cart Items -->
                                            <div id="cartItems">
                                                <div class="text-center text-muted py-3">
                                                    <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                                                    <p class="mb-0">Your cart is empty</p>
                                                </div>
                                            </div>

                                            <!-- Cart Footer -->
                                            <div id="cartFooter" style="display: none;">
                                                <hr/>
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span>Visit Date:</span>
                                                    <strong id="cartVisitDate">-</strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-3">
                                                    <span class="h5 mb-0">Total:</span>
                                                    <span class="h5 mb-0 text-primary" id="cartTotal">0.00 EUR</span>
                                                </div>
                                                <button class="btn btn-success w-100" onclick="goToCheckout()">
                                                    <i class="fas fa-shopping-bag me-2"></i>
                                                    Checkout
                                                </button>
                                                <button class="btn btn-outline-secondary w-100 mt-2" onclick="clearCart()">
                                                    <i class="fas fa-trash me-2"></i>
                                                    Clear Cart
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hidden Visitors Section (for compatibility) -->
                <div id="visitorsSection" style="display: none;">
                    <div id="visitorsContainer"></div>
                </div>

                <!-- Visitor Form Modal -->
                <div class="modal fade" id="visitorFormModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="visitorModalTitle">Visitor Information</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form id="visitorForm" onsubmit="return handleAgencySaveVisitor(event)">
                                <div class="modal-body">
                                    <input type="hidden" id="visitor_variant_id"/>
                                    <input type="hidden" id="visitor_product_name"/>
                                    <input type="hidden" id="visitor_index"/>
                                    <input type="hidden" id="ticket_product_type"/>

                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label">First Name *</label>
                                            <input type="text" class="form-control" id="visitor_first_name" required="required"/>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Last Name *</label>
                                            <input type="text" class="form-control" id="visitor_last_name" required="required"/>
                                        </div>
                                    </div>

                                    <div id="adult_fields">
                                        <div class="row g-3 mt-1">
                                            <div class="col-md-6">
                                                <label class="form-label">Phone *</label>
                                                <input type="tel" class="form-control" id="visitor_phone"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Email *</label>
                                                <input type="email" class="form-control" id="visitor_email"/>
                                            </div>
                                        </div>
                                        <div class="row g-3 mt-1">
                                            <div class="col-12">
                                                <label class="form-label">Identity Number *</label>
                                                <input type="text" class="form-control" id="visitor_identity"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>Save
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <script src="/eth_agency_portal/static/src/js/ticket_sales.js"></script>
            </t>
        </template>
    </data>
</odoo>
