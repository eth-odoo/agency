        <!-- Agency Reset Password Template - Using our minimal layout -->
        <template id="agency_reset_password" name="Agency Reset Password">
            <t t-call="eth_agency_portal.agency_minimal_layout">
                <t t-set="title">Reset Password</t>
                <t t-set="head">
                    <style>
                        .language-selector-top {
                            position: absolute;
                            top: 20px;
                            right: 20px;
                            z-index: 1000;
                        }
                        .language-selector-top select {
                            background: rgba(255, 255, 255, 0.95);
                            border: 2px solid #667eea;
                            color: #495057;
                            padding: 8px 12px;
                            border-radius: 8px;
                            font-size: 0.9rem;
                            font-weight: 500;
                            cursor: pointer;
                            transition: all 0.3s ease;
                        }
                        .language-selector-top select:hover {
                            background: white;
                            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
                        }
                        .language-selector-top select:focus {
                            outline: none;
                            border-color: #764ba2;
                            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
                        }
                    </style>
                    <script><![CDATA[
                        function validatePasswordMatch() {
                            var password = document.getElementById('new_password').value;
                            var confirmPassword = document.getElementById('confirm_password').value;
                            var confirmField = document.getElementById('confirm_password');
                            var errorMessage = document.querySelector('[data-translate="passwords-not-match"]').innerText || 'Passwords do not match';

                            if (password !== confirmPassword) {
                                confirmField.setCustomValidity(errorMessage);
                            } else {
                                confirmField.setCustomValidity('');
                            }
                        }
                    ]]></script>
                </t>

                <div class="wrap" style="position: relative;">
                    <!-- Language Selector at Top -->
                    <div class="language-selector-top">
                        <select id="language-selector" class="agency-language-switcher">
                            <t t-if="available_languages">
                                <t t-foreach="available_languages" t-as="lang">
                                    <option t-att-value="lang[0]" t-att-selected="'selected' if lang[0] == current_language else None">
                                        <t t-esc="lang[1]"/>
                                    </option>
                                </t>
                            </t>
                        </select>
                    </div>

                    <div class="container py-5">
                        <div class="row justify-content-center">
                            <div class="col-lg-5 col-md-7">
                                <div class="card shadow-lg border-0">
                                    <div class="card-header text-white text-center border-0"
                                         style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px 15px 0 0;">
                                        <h3 class="mb-0 fw-bold">
                                            <i class="fa fa-key me-2"></i>
                                            <span t-translate="">Set New Password</span>
                                        </h3>
                                        <p class="mb-0 mt-2 opacity-75">Agency Portal</p>
                                    </div>
                                    <div class="card-body p-5">
                                        <span data-translate="passwords-not-match" style="display:none;" t-translate="">Passwords do not match</span>

                                        <div class="alert alert-danger border-0" t-if="error" role="alert">
                                            <i class="fa fa-exclamation-triangle me-2"></i>
                                            <span t-esc="error"/>
                                        </div>

                                        <div t-if="user_email and not error" class="alert alert-info border-0" role="alert">
                                            <i class="fa fa-info-circle me-2"></i>
                                            <span t-translate="">Creating password for:</span> <strong t-esc="user_email"/>
                                        </div>

                                        <div t-if="token and not error">
                                            <p class="text-muted text-center mb-4">
                                                <span t-translate="">Enter your new password below.</span>
                                            </p>

                                            <form method="POST" class="o_website_form">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <input type="hidden" name="token" t-att-value="token"/>

                                                <div class="mb-4">
                                                    <label for="new_password" class="form-label fw-semibold">
                                                        <i class="fa fa-lock me-2 text-muted"></i>
                                                        <span t-translate="">New Password</span>
                                                    </label>
                                                    <input type="password"
                                                           class="form-control form-control-lg"
                                                           id="new_password"
                                                           name="new_password"
                                                           t-att-placeholder="Enter your new password"
                                                           required="true"
                                                           minlength="6"
                                                           onkeyup="validatePasswordMatch()"
                                                           style="border-radius: 10px; border: 2px solid #e9ecef;"/>
                                                    <small class="form-text text-muted"><span t-translate="">At least 6 characters</span></small>
                                                </div>

                                                <div class="mb-4">
                                                    <label for="confirm_password" class="form-label fw-semibold">
                                                        <i class="fa fa-lock me-2 text-muted"></i>
                                                        <span t-translate="">Confirm New Password</span>
                                                    </label>
                                                    <input type="password"
                                                           class="form-control form-control-lg"
                                                           id="confirm_password"
                                                           name="confirm_password"
                                                           t-att-placeholder="Re-enter your new password"
                                                           required="true"
                                                           minlength="6"
                                                           onkeyup="validatePasswordMatch()"
                                                           style="border-radius: 10px; border: 2px solid #e9ecef;"/>
                                                </div>

                                                <div class="d-grid mb-4">
                                                    <button type="submit" class="btn btn-lg btn-success fw-semibold" style="border-radius: 10px;">
                                                        <i class="fa fa-check me-2"></i>
                                                        <span t-translate="">Reset Password</span>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>

                                        <div t-if="error" class="text-center">
                                            <i class="fa fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                                            <p class="text-muted">
                                                <span t-translate="">The reset link is invalid or has expired.</span>
                                            </p>
                                            <a href="/agency/forgot-password" class="btn btn-primary fw-semibold" style="border-radius: 10px;">
                                                <i class="fa fa-refresh me-2"></i>
                                                <span t-translate="">Request New Reset Link</span>
                                            </a>
                                        </div>

                                        <div class="text-center mt-4">
                                            <a href="/agency/login" class="btn btn-link">
                                                <i class="fa fa-arrow-left me-1"></i>
                                                <span t-translate="">Back to Login</span>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-footer text-center bg-light border-0" style="border-radius: 0 0 15px 15px;">
                                        <small class="text-muted">
                                            <i class="fa fa-shield-alt me-1"></i>
                                            <span t-translate="">Secure Transaction</span> - Agency Portal
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Language Switcher Script -->
                <script>
                    $(document).ready(function() {
                        var currentLang = '<t t-if="current_language"><t t-esc="current_language"/></t><t t-else="">tr</t>';
                        if (currentLang) {
                            $('#language-selector').val(currentLang);
                        }

                        $('#language-selector').on('change', function() {
                            var langCode = $(this).val();
                            $.ajax({
                                url: '/agency/change-language',
                                type: 'POST',
                                dataType: 'json',
                                contentType: 'application/json',
                                data: JSON.stringify({
                                    'jsonrpc': '2.0',
                                    'method': 'call',
                                    'params': {'lang_code': langCode},
                                    'id': Date.now()
                                }),
                                success: function(result) {
                                    if (result.result &amp;&amp; result.result.success) {
                                        window.location.reload();
                                    }
                                }
                            });
                        });
                    });
                </script>
            </t>
        </template>

        <!-- Access Denied Template - Using our minimal layout -->
        <template id="agency_access_denied_auth" name="Agency Access Denied">
            <t t-call="eth_agency_portal.agency_minimal_layout">
                <t t-set="title">Access Denied</t>

                <div class="wrap">
                    <div class="container py-5">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="card border-0 shadow">
                                    <div class="card-body text-center py-5">
                                        <i class="fas fa-ban text-danger fa-3x mb-3"></i>
                                        <h4 class="text-danger fw-bold">Access Denied</h4>
                                        <p class="text-muted">
                                            <t t-esc="message or 'You do not have permission to access this page.'"/>
                                        </p>
                                        <a href="/agency/dashboard" class="btn btn-primary fw-semibold" style="border-radius: 10px;">
                                            <i class="fas fa-home me-2"></i>
                                            <span t-translate="">Return to Dashboard</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
