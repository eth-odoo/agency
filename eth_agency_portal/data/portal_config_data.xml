<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Portal Configuration Parameters -->

        <!-- Travel API URL (set to actual Travel system URL) -->
        <record id="config_travel_api_url" model="ir.config_parameter">
            <field name="key">eth_agency_portal.travel_api_url</field>
            <field name="value"></field>
        </record>

        <!-- Travel API Key (must match eth_travel_api.api_key) -->
        <record id="config_travel_api_key" model="ir.config_parameter">
            <field name="key">eth_agency_portal.travel_api_key</field>
            <field name="value"></field>
        </record>

        <!-- API Request Timeout (seconds) -->
        <record id="config_api_timeout" model="ir.config_parameter">
            <field name="key">eth_agency_portal.api_timeout</field>
            <field name="value">30</field>
        </record>

    </data>
</odoo>
