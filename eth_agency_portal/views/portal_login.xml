<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Login Page -->
    <template id="portal_login" name="Agency Portal Login">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white text-center py-3">
                                <h4 class="mb-0">Agency Portal</h4>
                            </div>
                            <div class="card-body p-4">
                                <t t-call="eth_agency_portal.portal_alerts"/>

                                <form action="/agency/login" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required="required" autofocus="autofocus"/>
                                    </div>

                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" required="required"/>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">Login</button>
                                    </div>
                                </form>

                                <div class="text-center mt-3">
                                    <a href="/agency/forgot-password" class="text-muted">Forgot password?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Forgot Password Page -->
    <template id="portal_forgot_password" name="Forgot Password">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white text-center py-3">
                                <h4 class="mb-0">Reset Password</h4>
                            </div>
                            <div class="card-body p-4">
                                <t t-call="eth_agency_portal.portal_alerts"/>

                                <p class="text-muted">Enter your email address and we'll send you a link to reset your password.</p>

                                <form action="/agency/forgot-password" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required="required"/>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">Send Reset Link</button>
                                    </div>
                                </form>

                                <div class="text-center mt-3">
                                    <a href="/agency/login">Back to Login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Reset Password Page -->
    <template id="portal_reset_password" name="Reset Password Form">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white text-center py-3">
                                <h4 class="mb-0">Set New Password</h4>
                            </div>
                            <div class="card-body p-4">
                                <t t-call="eth_agency_portal.portal_alerts"/>

                                <form t-attf-action="/agency/reset-password/#{token}" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="mb-3">
                                        <label for="password" class="form-label">New Password</label>
                                        <input type="password" class="form-control" id="password" name="password" required="required" minlength="8"/>
                                        <div class="form-text">Minimum 8 characters</div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="confirm_password" class="form-label">Confirm Password</label>
                                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" required="required"/>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">Reset Password</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Invalid Reset Token Page -->
    <template id="portal_reset_password_invalid" name="Invalid Reset Token">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-md-5 text-center">
                        <i class="fa fa-exclamation-circle fa-4x text-danger mb-3"></i>
                        <h3>Invalid or Expired Link</h3>
                        <p class="text-muted">This password reset link is invalid or has expired.</p>
                        <a href="/agency/forgot-password" class="btn btn-primary">Request New Link</a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
