<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wallet Page -->
    <template id="portal_wallet" name="Bonus Wallet">
        <t t-call="eth_agency_portal.portal_layout">
            <div class="row mb-4">
                <div class="col-12">
                    <h2>Bonus Wallet</h2>
                </div>
            </div>

            <!-- Balance Card -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h6 class="text-white-50">Current Balance</h6>
                            <h2 class="mb-0">
                                <t t-esc="'{:,.2f}'.format(wallet.get('balance', 0))"/>
                                <small><t t-esc="wallet.get('currency', 'EUR')"/></small>
                            </h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Entries -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Recent Transactions</h6>
                </div>
                <div class="card-body p-0">
                    <t t-if="wallet.get('entries')">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="wallet.get('entries', [])" t-as="entry">
                                    <tr>
                                        <td><t t-esc="entry.get('date', '')[:10] if entry.get('date') else '-'"/></td>
                                        <td><t t-esc="entry.get('description', '-')"/></td>
                                        <td>
                                            <span t-attf-class="badge #{'bg-success' if entry.get('type') == 'credit' else 'bg-danger'}">
                                                <t t-esc="entry.get('type', 'credit')"/>
                                            </span>
                                        </td>
                                        <td class="text-end" t-attf-class="#{'text-success' if entry.get('amount', 0) > 0 else 'text-danger'}">
                                            <t t-esc="'{:+,.2f}'.format(entry.get('amount', 0))"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <div class="text-center py-5 text-muted">
                            <i class="fa fa-inbox fa-3x mb-3"></i>
                            <p>No transactions yet</p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <!-- Reservations List Page -->
    <template id="portal_reservations" name="Bonus Reservations">
        <t t-call="eth_agency_portal.portal_layout">
            <div class="row mb-4">
                <div class="col">
                    <h2>Bonus Reservations</h2>
                </div>
                <div class="col-auto">
                    <a href="/agency/bonus/reservations/new" class="btn btn-primary">
                        <i class="fa fa-plus"></i> New Reservation
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/agency/bonus/reservations" method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select name="state" class="form-select">
                                <option value="">All</option>
                                <option value="draft" t-att-selected="current_state == 'draft'">Draft</option>
                                <option value="confirmed" t-att-selected="current_state == 'confirmed'">Confirmed</option>
                                <option value="done" t-att-selected="current_state == 'done'">Done</option>
                                <option value="cancelled" t-att-selected="current_state == 'cancelled'">Cancelled</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">From Date</label>
                            <input type="date" name="date_from" class="form-control" t-att-value="current_date_from"/>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">To Date</label>
                            <input type="date" name="date_to" class="form-control" t-att-value="current_date_to"/>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-secondary me-2">Filter</button>
                            <a href="/agency/bonus/reservations" class="btn btn-outline-secondary">Clear</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Reservations Table -->
            <div class="card">
                <div class="card-body p-0">
                    <t t-if="reservations">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Reference</th>
                                    <th>Hotel</th>
                                    <th>Guest</th>
                                    <th>Check-in</th>
                                    <th>Check-out</th>
                                    <th>Status</th>
                                    <th class="text-end">Bonus</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="reservations" t-as="res">
                                    <tr>
                                        <td>
                                            <a t-attf-href="/agency/bonus/reservations/#{res.get('id')}">
                                                <t t-esc="res.get('name', '-')"/>
                                            </a>
                                        </td>
                                        <td><t t-esc="res.get('hotel', {}).get('name', '-')"/></td>
                                        <td><t t-esc="res.get('guest_name', '-')"/></td>
                                        <td><t t-esc="res.get('checkin_date', '-')"/></td>
                                        <td><t t-esc="res.get('checkout_date', '-')"/></td>
                                        <td>
                                            <span t-attf-class="badge #{'bg-success' if res.get('state') == 'confirmed' else 'bg-secondary'}">
                                                <t t-esc="res.get('state', '-')"/>
                                            </span>
                                        </td>
                                        <td class="text-end"><t t-esc="'{:,.2f}'.format(res.get('bonus_amount', 0))"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <div class="text-center py-5 text-muted">
                            <i class="fa fa-calendar-times fa-3x mb-3"></i>
                            <p>No reservations found</p>
                            <a href="/agency/bonus/reservations/new" class="btn btn-primary">Create First Reservation</a>
                        </div>
                    </t>
                </div>
                <t t-if="total_count > len(reservations)">
                    <div class="card-footer text-muted">
                        Showing <t t-esc="len(reservations)"/> of <t t-esc="total_count"/> reservations
                    </div>
                </t>
            </div>
        </t>
    </template>

    <!-- Reservation Detail Page -->
    <template id="portal_reservation_detail" name="Reservation Detail">
        <t t-call="eth_agency_portal.portal_layout">
            <div class="row mb-4">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/agency/bonus/reservations">Reservations</a></li>
                            <li class="breadcrumb-item active"><t t-esc="reservation.get('name', 'Detail')"/></li>
                        </ol>
                    </nav>
                    <h2><t t-esc="reservation.get('name', 'Reservation')"/></h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">Reservation Details</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="text-muted" style="width: 30%;">Hotel</td>
                                    <td><t t-esc="reservation.get('hotel', {}).get('name', '-')"/></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Room Type</td>
                                    <td><t t-esc="reservation.get('room_type', {}).get('name', '-')"/></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Guest Name</td>
                                    <td><t t-esc="reservation.get('guest_name', '-')"/></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Check-in</td>
                                    <td><t t-esc="reservation.get('checkin_date', '-')"/></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Check-out</td>
                                    <td><t t-esc="reservation.get('checkout_date', '-')"/></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Room Nights</td>
                                    <td><t t-esc="reservation.get('room_nights', 0)"/></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Operator</td>
                                    <td><t t-esc="reservation.get('operator', '-')"/></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Voucher Number</td>
                                    <td><t t-esc="reservation.get('voucher_number', '-')"/></td>
                                </tr>
                                <tr t-if="reservation.get('notes')">
                                    <td class="text-muted">Notes</td>
                                    <td><t t-esc="reservation.get('notes')"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">Status</h6>
                        </div>
                        <div class="card-body text-center">
                            <span t-attf-class="badge fs-5 #{'bg-success' if reservation.get('state') == 'confirmed' else 'bg-warning' if reservation.get('state') == 'draft' else 'bg-secondary'}">
                                <t t-esc="reservation.get('state', '-')"/>
                            </span>
                        </div>
                    </div>

                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h6 class="text-white-50">Bonus Amount</h6>
                            <h2 class="mb-0"><t t-esc="'{:,.2f}'.format(reservation.get('bonus_amount', 0))"/></h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a href="/agency/bonus/reservations" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
            </div>
        </t>
    </template>

    <!-- New Reservation Form -->
    <template id="portal_reservation_form" name="New Reservation Form">
        <t t-call="eth_agency_portal.portal_layout">
            <div class="row mb-4">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/agency/bonus/reservations">Reservations</a></li>
                            <li class="breadcrumb-item active">New Reservation</li>
                        </ol>
                    </nav>
                    <h2>New Bonus Reservation</h2>
                </div>
            </div>

            <t t-call="eth_agency_portal.portal_alerts"/>

            <div class="card">
                <div class="card-body">
                    <form action="/agency/bonus/reservations/create" method="post">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="hotel_id" class="form-label">Hotel *</label>
                                <select name="hotel_id" id="hotel_id" class="form-select" required="required">
                                    <option value="">Select Hotel</option>
                                    <t t-foreach="hotels" t-as="hotel">
                                        <option t-att-value="hotel.get('id')">
                                            <t t-esc="hotel.get('name')"/>
                                            <t t-if="hotel.get('city')"> - <t t-esc="hotel.get('city')"/></t>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="guest_name" class="form-label">Guest Name *</label>
                                <input type="text" name="guest_name" id="guest_name" class="form-control" required="required"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="checkin_date" class="form-label">Check-in Date *</label>
                                <input type="date" name="checkin_date" id="checkin_date" class="form-control" required="required"/>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="checkout_date" class="form-label">Check-out Date *</label>
                                <input type="date" name="checkout_date" id="checkout_date" class="form-control" required="required"/>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="room_nights" class="form-label">Room Nights</label>
                                <input type="number" name="room_nights" id="room_nights" class="form-control" value="1" min="1"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="market_id" class="form-label">Market</label>
                                <select name="market_id" id="market_id" class="form-select">
                                    <option value="">Select Market</option>
                                    <t t-foreach="markets" t-as="market">
                                        <option t-att-value="market.get('id')">
                                            <t t-esc="market.get('name')"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="operator_id" class="form-label">Operator</label>
                                <select name="operator_id" id="operator_id" class="form-select">
                                    <option value="">Select Operator</option>
                                    <t t-foreach="operators" t-as="operator">
                                        <option t-att-value="operator.get('id')">
                                            <t t-esc="operator.get('name')"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="voucher_number" class="form-label">Voucher Number</label>
                                <input type="text" name="voucher_number" id="voucher_number" class="form-control"/>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes</label>
                            <textarea name="notes" id="notes" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Create Reservation</button>
                            <a href="/agency/bonus/reservations" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <!-- Contracts Page -->
    <template id="portal_contracts" name="Bonus Contracts">
        <t t-call="eth_agency_portal.portal_layout">
            <div class="row mb-4">
                <div class="col">
                    <h2>Bonus Contracts</h2>
                    <p class="text-muted">View active bonus contracts for your interested hotels</p>
                </div>
            </div>

            <!-- Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/agency/bonus/contracts" method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Hotel</label>
                            <select name="hotel_id" class="form-select">
                                <option value="">All Hotels</option>
                                <t t-foreach="hotels" t-as="hotel">
                                    <option t-att-value="hotel.get('id')" t-att-selected="str(hotel.get('id')) == current_hotel_id">
                                        <t t-esc="hotel.get('name')"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-secondary me-2">Filter</button>
                            <a href="/agency/bonus/contracts" class="btn btn-outline-secondary">Clear</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Contracts Table -->
            <div class="card">
                <div class="card-body p-0">
                    <t t-if="contracts">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Hotel</th>
                                    <th>Commission Type</th>
                                    <th>Rate</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="contracts" t-as="contract">
                                    <tr>
                                        <td><t t-esc="contract.get('hotel_name', '-')"/></td>
                                        <td><t t-esc="contract.get('commission_type', '-')"/></td>
                                        <td><t t-esc="contract.get('commission_rate', 0)"/></td>
                                        <td><t t-esc="contract.get('start_date', '-')"/></td>
                                        <td><t t-esc="contract.get('end_date', '-')"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <div class="text-center py-5 text-muted">
                            <i class="fa fa-file-contract fa-3x mb-3"></i>
                            <p>No active contracts found</p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
