<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Agency List View -->
    <record id="view_agency_tree" model="ir.ui.view">
        <field name="name">travel.agency.list</field>
        <field name="model">travel.agency</field>
        <field name="arch" type="xml">
            <list string="Agencies">
                <field name="code"/>
                <field name="name"/>
                <field name="partner_id" optional="hide"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="membership_purpose_ids" widget="many2many_tags" optional="show"/>
                <field name="user_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'suspended'"
                       decoration-danger="state == 'terminated'"
                       decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Agency Form View -->
    <record id="view_agency_form" model="ir.ui.view">
        <field name="name">travel.agency.form</field>
        <field name="model">travel.agency</field>
        <field name="arch" type="xml">
            <form string="Agency">
                <header>
                    <button name="action_activate" string="Activate" type="object"
                            class="btn-success" invisible="state == 'active'"/>
                    <button name="action_suspend" string="Suspend" type="object"
                            class="btn-warning" invisible="state != 'active'"/>
                    <button name="action_terminate" string="Terminate" type="object"
                            class="btn-danger" invisible="state == 'terminated'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,suspended,terminated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_partner" type="object"
                                class="oe_stat_button" icon="fa-building">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Partner</span>
                            </div>
                        </button>
                        <button name="action_view_users" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="user_count" widget="statinfo"/>
                        </button>
                        <button name="action_view_conversations" type="object"
                                class="oe_stat_button" icon="fa-comments">
                            <field name="conversation_count" widget="statinfo" string="Messages"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-bullhorn" disabled="1">
                            <field name="announcement_count" widget="statinfo" string="Announcements"/>
                        </button>
                        <button name="action_view_registration" type="object"
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="not registration_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Registration</span>
                            </div>
                        </button>
                        <button name="action_view_update_requests" type="object"
                                class="oe_stat_button" icon="fa-refresh">
                            <field name="pending_request_count" widget="statinfo" string="Pending Requests"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Agency Name"/>
                        </h1>
                        <h3>
                            <field name="code" readonly="1"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Agency Information">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="master_user_id" readonly="1"/>
                            <field name="registration_id" readonly="1" invisible="1"/>
                            <field name="preferred_language"/>
                            <field name="default_language"/>
                        </group>
                        <group string="Contact Information">
                            <field name="email" widget="email"/>
                            <field name="phone"/>
                            <field name="website" widget="url"/>
                            <field name="city"/>
                            <field name="country_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Business Details" name="business">
                            <group>
                                <group string="Contract Information">
                                    <field name="contract_start_date"/>
                                    <field name="contract_end_date"/>
                                    <field name="currency_id"/>
                                </group>
                                <group string="Commission Settings">
                                    <field name="agency_group_id"/>
                                    <field name="commission_type" readonly="1"/>
                                    <field name="commission_percentage" readonly="1" widget="percentage"/>
                                    <field name="default_commission_rate" invisible="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Membership">
                                    <field name="membership_purpose_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>

                        <page string="Users" name="users">
                            <field name="agency_user_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone" optional="show"/>
                                    <field name="country_id" optional="hide"/>
                                    <field name="is_master"/>
                                    <field name="active"/>
                                    <field name="last_login" optional="show"/>
                                </list>
                            </field>
                        </page>

                        <page string="Statistics" name="statistics">
                            <group>
                                <group>
                                    <field name="total_bookings" readonly="1"/>
                                    <field name="total_revenue" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Messages" name="messages" badge="unread_message_count">
                            <field name="conversation_ids" readonly="1">
                                <list create="0" delete="0">
                                    <field name="name"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'open'"
                                           decoration-muted="state == 'closed'"/>
                                    <field name="message_count"/>
                                    <field name="unread_admin_count" string="Unread"/>
                                    <field name="last_message_date"/>
                                </list>
                            </field>
                        </page>

                        <page string="Announcements" name="announcements">
                            <group>
                                <group>
                                    <field name="announcement_count" readonly="1" string="Announcements Sent"/>
                                </group>
                                <group>
                                    <field name="announcement_read_ids" readonly="1" string="Read Announcements" nolabel="1">
                                        <list create="0" delete="0">
                                            <field name="announcement_id"/>
                                            <field name="read_date"/>
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>

                        <page string="Update Requests" name="update_requests" badge="pending_request_count">
                            <field name="update_request_ids" readonly="1">
                                <list create="0" delete="0" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                                    <field name="name"/>
                                    <field name="request_type"/>
                                    <field name="reason" string="Reason" optional="show"/>
                                    <field name="create_date" string="Submitted"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'pending'"
                                           decoration-success="state == 'approved'"
                                           decoration-danger="state == 'rejected'"/>
                                    <button name="action_approve" string="Approve" type="object"
                                            class="btn-success btn-sm"
                                            invisible="state != 'pending'"
                                            groups="eth_agency_core.group_agency_admin"/>
                                    <button name="action_reject" string="Reject" type="object"
                                            class="btn-danger btn-sm"
                                            invisible="state != 'pending'"
                                            groups="eth_agency_core.group_agency_admin"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Agency Search View -->
    <record id="view_agency_search" model="ir.ui.view">
        <field name="name">travel.agency.search</field>
        <field name="model">travel.agency</field>
        <field name="arch" type="xml">
            <search string="Search Agencies">
                <field name="name"/>
                <field name="code"/>
                <field name="email"/>
                <field name="partner_id"/>
                <field name="country_id"/>
                <field name="membership_purpose_ids"/>
                <field name="agency_group_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Suspended" name="suspended" domain="[('state', '=', 'suspended')]"/>
                <filter string="Terminated" name="terminated" domain="[('state', '=', 'terminated')]"/>
                <separator/>
                <filter string="Has Master User" name="has_master" domain="[('master_user_id', '!=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Agency Group" name="group_agency_group" context="{'group_by': 'agency_group_id'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                    <filter string="Language" name="group_language" context="{'group_by': 'preferred_language'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Agency Action -->
    <record id="action_agency" model="ir.actions.act_window">
        <field name="name">Agencies</field>
        <field name="res_model">travel.agency</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_agency_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first agency
            </p>
            <p>
                Manage agencies, their users, and contracts.
            </p>
        </field>
    </record>
</odoo>
