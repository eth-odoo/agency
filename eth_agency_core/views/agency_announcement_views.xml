<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Announcement Form View -->
    <record id="view_agency_announcement_form" model="ir.ui.view">
        <field name="name">agency.announcement.form</field>
        <field name="model">agency.announcement</field>
        <field name="arch" type="xml">
            <form string="Announcement">
                <header>
                    <button name="action_publish" string="Publish"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_archive" string="Archive"
                            type="object"
                            invisible="state != 'published'"/>
                    <button name="action_draft" string="Set to Draft"
                            type="object"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_reads" type="object"
                                class="oe_stat_button" icon="fa-eye">
                            <div class="o_stat_info">
                                <field name="read_count" class="o_stat_value"/>
                                <span class="o_stat_text">Read</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" icon="fa-users" disabled="1">
                            <div class="o_stat_info">
                                <field name="target_count" class="o_stat_value"/>
                                <span class="o_stat_text">Target</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Published" bg_color="text-bg-success"
                            invisible="state != 'published'"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-secondary"
                            invisible="state != 'archived'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Announcement Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="announcement_type" widget="radio"/>
                            <field name="priority" widget="priority"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="created_by" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Content" name="content">
                            <group>
                                <group string="Turkish">
                                    <field name="summary_tr" placeholder="Short summary..."/>
                                    <field name="content_tr" placeholder="Full content in Turkish..."/>
                                </group>
                                <group string="English">
                                    <field name="summary_en" placeholder="Short summary..."/>
                                    <field name="content_en" placeholder="Full content in English..."/>
                                </group>
                            </group>
                            <group>
                                <group string="German">
                                    <field name="summary_de" placeholder="Short summary..."/>
                                    <field name="content_de" placeholder="Full content in German..."/>
                                </group>
                                <group string="French">
                                    <field name="summary_fr" placeholder="Short summary..."/>
                                    <field name="content_fr" placeholder="Full content in French..."/>
                                </group>
                            </group>
                        </page>

                        <page string="Media" name="media">
                            <group>
                                <group string="Image">
                                    <field name="image" widget="image" class="oe_avatar"/>
                                    <field name="image_filename" invisible="1"/>
                                </group>
                                <group string="Video">
                                    <field name="video_url" widget="url" placeholder="https://www.youtube.com/watch?v=..."/>
                                    <div class="text-muted small" colspan="2">
                                        Supported formats: YouTube (youtube.com/watch?v=, youtu.be/), Vimeo (vimeo.com/)
                                    </div>
                                </group>
                            </group>
                            <group>
                                <group string="External Link">
                                    <field name="link" widget="url"/>
                                    <field name="link_text"/>
                                </group>
                            </group>
                        </page>

                        <page string="Targeting" name="targeting">
                            <group>
                                <field name="target_type" widget="radio"/>
                            </group>
                            <group invisible="target_type != 'selected'">
                                <field name="agency_ids" widget="many2many_tags"
                                       options="{'no_create': True}"/>
                            </group>
                            <group invisible="target_type != 'by_group'">
                                <field name="agency_group_ids" widget="many2many_tags"
                                       options="{'no_create': True}"/>
                            </group>
                            <group invisible="target_type != 'by_country'">
                                <field name="country_ids" widget="many2many_tags"
                                       options="{'no_create': True}"/>
                            </group>
                            <group invisible="target_type != 'by_language'">
                                <field name="target_languages" widget="radio"/>
                            </group>
                        </page>

                        <page string="Read Statistics" name="stats">
                            <field name="read_ids" readonly="1">
                                <list string="Read Records" create="0" delete="0">
                                    <field name="agency_id"/>
                                    <field name="user_id"/>
                                    <field name="read_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Announcement List View -->
    <record id="view_agency_announcement_list" model="ir.ui.view">
        <field name="name">agency.announcement.list</field>
        <field name="model">agency.announcement</field>
        <field name="arch" type="xml">
            <list string="Announcements" decoration-muted="state == 'archived'"
                  decoration-success="state == 'published'">
                <field name="name"/>
                <field name="announcement_type" widget="badge"
                       decoration-info="announcement_type == 'announcement'"
                       decoration-warning="announcement_type == 'campaign'"/>
                <field name="has_video" string="Video" widget="boolean"
                       optional="show"/>
                <field name="target_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="read_count"/>
                <field name="target_count"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'published'"
                       decoration-muted="state == 'archived'"/>
                <field name="priority" widget="priority"/>
            </list>
        </field>
    </record>

    <!-- Announcement Search View -->
    <record id="view_agency_announcement_search" model="ir.ui.view">
        <field name="name">agency.announcement.search</field>
        <field name="model">agency.announcement</field>
        <field name="arch" type="xml">
            <search string="Announcements">
                <field name="name"/>
                <separator/>
                <filter string="Announcements" name="announcements"
                        domain="[('announcement_type', '=', 'announcement')]"/>
                <filter string="Campaigns" name="campaigns"
                        domain="[('announcement_type', '=', 'campaign')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>
                <separator/>
                <filter string="Active Now" name="active_now"
                        domain="[('state', '=', 'published'),
                                 ('start_date', '&lt;=', context_today().strftime('%Y-%m-%d')),
                                 '|', ('end_date', '=', False),
                                 ('end_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'announcement_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Target" name="group_target" context="{'group_by': 'target_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Announcement Kanban View -->
    <record id="view_agency_announcement_kanban" model="ir.ui.view">
        <field name="name">agency.announcement.kanban</field>
        <field name="model">agency.announcement</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="announcement_type"/>
                <field name="state"/>
                <field name="read_count"/>
                <field name="target_count"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image" t-if="record.image.raw_value">
                                <img t-att-src="kanban_image('agency.announcement', 'image', record.id.raw_value)"
                                     alt="Announcement" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="announcement_type" widget="badge"/>
                                </div>
                                <div class="text-muted">
                                    <span><i class="fa fa-eye"/> <field name="read_count"/>/<field name="target_count"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Announcement Action -->
    <record id="action_agency_announcement" model="ir.actions.act_window">
        <field name="name">Announcements</field>
        <field name="res_model">agency.announcement</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_agency_announcement_search"/>
        <field name="context">{'search_default_published': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first announcement
            </p>
            <p>
                Send announcements and campaigns to your agencies.
            </p>
        </field>
    </record>

    <!-- Read Records List View -->
    <record id="view_agency_announcement_read_list" model="ir.ui.view">
        <field name="name">agency.announcement.read.list</field>
        <field name="model">agency.announcement.read</field>
        <field name="arch" type="xml">
            <list string="Read Records">
                <field name="announcement_id"/>
                <field name="agency_id"/>
                <field name="user_id"/>
                <field name="read_date"/>
            </list>
        </field>
    </record>
</odoo>
