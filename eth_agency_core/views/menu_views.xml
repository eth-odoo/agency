        name="Announcements"
        parent="menu_agency_communication"
        action="action_agency_announcement"
        sequence="10"/>

    <menuitem id="menu_agency_conversations"
        name="Conversations"
        parent="menu_agency_communication"
        action="action_agency_conversation"
        sequence="20"/>

