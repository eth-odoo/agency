<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sequence for Update Request -->
        <record id="seq_agency_update_request" model="ir.sequence">
            <field name="name">Agency Update Request</field>
            <field name="code">agency.update.request</field>
            <field name="prefix">AUR/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Update Request Form View -->
        <record id="view_agency_update_request_form" model="ir.ui.view">
            <field name="name">agency.update.request.form</field>
            <field name="model">agency.update.request</field>
            <field name="arch" type="xml">
                <form string="Update Request">
                    <header>
                        <button name="action_submit" string="Submit" type="object"
                                class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object"
                                class="btn-success"
                                invisible="state != 'pending'"
                                groups="eth_agency_core.group_agency_admin"/>
                        <button name="action_reject" string="Reject" type="object"
                                class="btn-danger"
                                invisible="state != 'pending'"
                                groups="eth_agency_core.group_agency_admin"/>
                        <button name="action_cancel" string="Cancel" type="object"
                                invisible="state not in ('draft', 'pending')"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                                invisible="state in ('draft', 'approved')"
                                groups="eth_agency_core.group_agency_admin"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,pending,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="agency_id" readonly="state != 'draft'"/>
                                <field name="request_type" readonly="state != 'draft'"/>
                                <field name="requested_by"/>
                            </group>
                            <group>
                                <field name="approved_by" invisible="state not in ('approved', 'rejected')"/>
                                <field name="approved_date" invisible="state not in ('approved', 'rejected')"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Requested Items" name="items">
                                <group>
                                    <field name="membership_purpose_ids" widget="many2many_tags"
                                           readonly="state != 'draft'"
                                           options="{'no_create': True}"/>
                                </group>
                            </page>
                            <page string="Reason" name="reason">
                                <field name="reason" readonly="state != 'draft'"
                                       placeholder="Please explain why you need this change..."/>
                            </page>
                            <page string="Rejection" name="rejection"
                                  invisible="state != 'rejected'">
                                <group>
                                    <field name="rejection_reason" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Update Request List View -->
        <record id="view_agency_update_request_list" model="ir.ui.view">
            <field name="name">agency.update.request.list</field>
            <field name="model">agency.update.request</field>
            <field name="arch" type="xml">
                <list string="Update Requests"
                      decoration-info="state == 'draft'"
                      decoration-warning="state == 'pending'"
                      decoration-success="state == 'approved'"
                      decoration-danger="state == 'rejected'"
                      decoration-muted="state == 'cancelled'">
                    <field name="name"/>
                    <field name="agency_id"/>
                    <field name="request_type"/>
                    <field name="item_names" string="Requested Items"/>
                    <field name="requested_by"/>
                    <field name="create_date" string="Submitted"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'draft'"
                           decoration-warning="state == 'pending'"
                           decoration-success="state == 'approved'"
                           decoration-danger="state == 'rejected'"/>
                </list>
            </field>
        </record>

        <!-- Update Request Search View -->
        <record id="view_agency_update_request_search" model="ir.ui.view">
            <field name="name">agency.update.request.search</field>
            <field name="model">agency.update.request</field>
            <field name="arch" type="xml">
                <search string="Search Update Requests">
                    <field name="name"/>
                    <field name="agency_id"/>
                    <field name="request_type"/>
                    <filter name="filter_pending" string="Pending"
                            domain="[('state', '=', 'pending')]"/>
                    <filter name="filter_approved" string="Approved"
                            domain="[('state', '=', 'approved')]"/>
                    <filter name="filter_rejected" string="Rejected"
                            domain="[('state', '=', 'rejected')]"/>
                    <separator/>
                    <filter name="filter_add" string="Add Requests"
                            domain="[('request_type', '=', 'add_membership')]"/>
                    <filter name="filter_remove" string="Remove Requests"
                            domain="[('request_type', '=', 'remove_membership')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_agency" string="Agency"
                                context="{'group_by': 'agency_id'}"/>
                        <filter name="group_state" string="Status"
                                context="{'group_by': 'state'}"/>
                        <filter name="group_type" string="Request Type"
                                context="{'group_by': 'request_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Update Request Action -->
        <record id="action_agency_update_request" model="ir.actions.act_window">
            <field name="name">Update Requests</field>
            <field name="res_model">agency.update.request</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_agency_update_request_search"/>
            <field name="context">{'search_default_filter_pending': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No update requests yet
                </p>
                <p>
                    Agency update requests will appear here when agencies request changes
                    to their hotel interests or membership purposes.
                </p>
            </field>
        </record>

        <!-- Reject Wizard Form View -->
        <record id="view_agency_update_request_reject_wizard_form" model="ir.ui.view">
            <field name="name">agency.update.request.reject.wizard.form</field>
            <field name="model">agency.update.request.reject.wizard</field>
            <field name="arch" type="xml">
                <form string="Reject Request">
                    <group>
                        <field name="request_id" invisible="1"/>
                        <field name="rejection_reason" placeholder="Please provide a reason for rejection..."/>
                    </group>
                    <footer>
                        <button name="action_reject" string="Reject" type="object" class="btn-danger"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Menu Item - Under existing Agency menu -->
        <menuitem id="menu_agency_update_request"
                  name="Update Requests"
                  parent="menu_agency_root"
                  action="action_agency_update_request"
                  sequence="35"
                  groups="eth_agency_core.group_agency_admin"/>

    </data>
</odoo>
